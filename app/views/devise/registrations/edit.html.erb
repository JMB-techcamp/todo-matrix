<header>
  <div class="title"><h1>設定</h1></div>
  <div class="icon"><a href="/user/<%= current_user.id %>/mypage" class="btn"><i class="fas fa-home fa-5x"></i></a></div>
</header>
<div class="contents">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
    <div class="input-form">
      <div class="input-form-left">
        <h1>Email</h1>
      </div>
      <div class="input-form-right">
        <!-- <input type="textarea" name="email"> -->
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>パスワード変更</h1>
      </div>
      <div class="input-form-right">
        <!-- <input type="textarea" name="password"> -->
        <%= f.password_field :password, autocomplete: "off" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>パスワード変更（確認）</h1>
      </div>
      <div class="input-form-right">
        <!-- <input type="textarea" name="password"> -->
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>現在のパスワード</h1>
      </div>
      <div class="input-form-right">
        <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
    </div>
    <hr>
  <div class="input-form">
      <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
        <i class="far fa-check-circle fa-5x"></i>
      <% end %>
  </div>
<!-- <h3>Cancel my account</h3> -->

<!-- <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
<% end %>
</div>
