<!-- "/app/assets/stylesheets/signin_style.css" -->

<div class="signin-wrapper">
  <div class="contents-header">
    <h1>TODO MATRIX</h1>
  </div>

  <div class="contents-header">
    <h2>自動で仕事の優先順位決めてくれるやつ</h2>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'signin-field'}) do |f| %>
    <div class="wrapper">
      <!-- <%= f.label :email %><br /> -->
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", size: "60" %>
    </div>

    <div class="wrapper">
      <!-- <%= f.label :password %><br /> -->
      <%= f.password_field :password, autocomplete: "off" , placeholder: "パスワード", size: "60"%>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="signin-field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="signin-field">
      <%= f.submit "Log in" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
