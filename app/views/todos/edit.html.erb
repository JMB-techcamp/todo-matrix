<header>
  <div class="icon"><a href="javascript:history.back()" class="btn"><i class="fas fa-arrow-left fa-5x"></i><div class="icon-text">戻る</div></a></div>
  <div class="title"><h1>TODO編集</h1></div>
  <div class="icon"><a href="/users/mypage" class="btn"><i class="fas fa-home fa-5x"></i><div class="icon-text">ホーム</div></a></div>
</header><!-- /header -->
<div class="contents">
  <%= form_tag("/todos/#{@todo.id}", method: :patch) do |f|%>
    <div class="input-form">
      <div class="input-form-left">
        <h1>内容</h1>
      </div>
      <div class="input-form-right">
        <input type="textarea" name="title" value="<%= @todo.title %>">
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>日付</h1>
      </div>
      <div class="input-form-right">
        <input type="date" name="dead_date" style="font-size:40px;" value=<%= @todo.dead_line.strftime("%Y-%m-%d") %>>
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>時間</h1>
      </div>
      <div class="input-form-right">
        <input type="time" name="dead_time" style="font-size:40px;" value=<%= @todo.dead_line.strftime("%H:%M")%>>
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>詳細</h1>
      </div>
      <div class="input-form-right">
        <input type="textarea" name="detail" style="font-size:40px;" value="<%= @todo.detail %>">
      </div>
    </div>
    <div class="submit-button">
      <div class="submit-icon">
        <i class="far fa-check-circle fa-5x"></i>
      </div>
      <div class="submit-text">
          <input type="submit" value="更新">
      </div>
    </div>
  <% end %>
</div>
