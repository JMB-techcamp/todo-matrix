<header>
  <div class="title"><h1>タスク追加</h1></div>
  <div class="icon"><a href="/user/<%= current_user.id %>/mypage" class="btn"><i class="fas fa-home fa-5x"></i></a></div>
</header><!-- /header -->
<div class="contents">
  <%= form_tag('/todos', method: :post) do |f|%>
    <div class="input-form">
      <div class="input-form-left">
        <h1>内容</h1>
      </div>
      <div class="input-form-right">
        <input type="textarea" name="title">
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>日付</h1>
      </div>
      <div class="input-form-right">
        <input type="date" name="dead_date" style="font-size:40px;">
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>時間</h1>
      </div>
      <div class="input-form-right">
        <input type="time" name="dead_time" style="font-size:40px;">
      </div>
    </div>
    <hr>
    <div class="input-form">
      <div class="input-form-left">
        <h1>詳細</h1>
      </div>
      <div class="input-form-right">
        <input type="textarea" name="detail" style="font-size:40px;">
      </div>
    </div>
    <div class="input-form">
      <!-- <input type="submit" value="登録"> -->
      <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %>
        <i class="far fa-check-circle fa-5x"></i>
      <% end %>
      <!-- <i class="far fa-check-circle fa-5x"></i> -->
    </div>
  <% end %>
</div>
