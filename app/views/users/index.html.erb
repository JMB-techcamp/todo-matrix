<!-- "/app/assets/stylesheets/mypage_style.css" -->
<% todolen = @todos.length %>
<% time_now = Time.now %>
<% time_limit = time_now + 1.day %>
<header>
  <h1>MY PAGE （タスク<%= todolen %>件）</h1>
  <a href=<%="/user/#{current_user.id}/todos"%>>TODOリスト</a>
  <a href="/todos/new">タスク登録</a>
</header>
<div class="todo-mat">
  <div class="contents-row">
    <div class="contents-left">
      <h1><%= time_limit.strftime('%m月%d日') %>までの重要なタスク</h1>
      <%  @todos.each do |todo| %>
        <% if todo.importance <= todolen/2 and todo.dead_line < time_limit then %>
          <li>
              <a href=<%="/todos/#{todo.id}"%> > <%= todo.title %> </a>
          </li>
        <% end %>
      <% end %>
    </div>
    <div class="contents-right">
      <h1><%= time_limit.strftime('%m月%d日') %>より先の重要なタスク</h1>
      <%  @todos.each do |todo| %>
        <% if todo.importance <= todolen/2 and todo.dead_line >= time_limit then %>
          <li>
              <a href=<%="/todos/#{todo.id}"%> > <%= todo.title %> </a>
          </li>
        <% end %>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="contents-row">
    <div class="contents-left">
      <h1><%= time_limit.strftime('%m月%d日') %>までのタスク</h1>
      <%  @todos.each do |todo| %>
        <% if todo.importance > todolen/2 and todo.dead_line < time_limit then %>
          <li>
              <a href=<%="/todos/#{todo.id}"%> > <%= todo.title %> </a>
          </li>
        <% end %>
      <% end %>
    </div>
    <div class="contents-right">
      <h1><%= time_limit.strftime('%m月%d日') %>より先のタスク</h1>
      <%  @todos.each do |todo| %>
        <% if todo.importance > todolen/2 and todo.dead_line >= time_limit then %>
          <li>
              <a href=<%="/todos/#{todo.id}"%> > <%= todo.title %> </a>
          </li>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
